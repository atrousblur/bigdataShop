<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.kitri.bigdataShop.product.comment">

	<insert id="insert" parameterType="prdcmt">
		insert into pro_comment values
		(prdcmt_seq.nextval,#{prd_no}, #{mem_id}, #{pro_comment}, sysdate)
	</insert>

	<select id="list" parameterType="String" resultType="prdcmt">
		select * from pro_comment where prd_no = #{prd_no} order by writedate asc
	</select>

	<delete id="delete" parameterType="prdcmt">
		delete from pro_comment where prdcmt_no = #{prdcmt_no}
	</delete>
	
	<select id="comment_result" resultType="commentresult" parameterType="String">
		select * from comment_result order by to_number(count) desc
	</select>
	
</mapper>